<!DOCTYPE html>
<html>
<head>
  <title>BeerRatings</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

 

	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
        <a class="brand" href="http://beerratings.herokuapp.com">Jason's Beer Ratings</a>
				<ul class="nav">
					<li><%= link_to "Full List", ratings_path %></li>
				</ul>
				<form class="navbar-search pull-left">
      		<input type="text" class="search-query span3" placeholder="Find Some Beers" name="search">
    			<div class="icon-search"></div>
     		</form>
			</div>
		</div>
	</div>

	<div class="container">
		<%= yield %>
	</div>

</body>

<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-36674498-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</html>
